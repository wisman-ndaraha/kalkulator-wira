<body>
     <div id="tambah">
        <h3>PERTAMBAHAN</h3>
        <input id="bil1"/></br>
        <input id="bil2"/></br>
        <input id="hasilpertambahan"/></br>
        <button onclick="pertambahan">tambah</button>
    </div>
    <div id="bagi">
        <h3>PEMBAGIAN</h3>
        <input id="bil3"/></br>
        <input id="bil4"/></br>
        <input id="hasilpembagian"/></br>
        <button onclick="pembagian">bagi</button>
     </div>
     <div id="kali">
        <h3>PERKALIAN</h3>
        <input id="bil5"/></br>
        <input id="bil6"/></br>
        <input id="hasilperkalian"/></br>
        <button onclick="perkalian">kali</button>
    </div>
    
    <script>
        function pertambahan() {
            var angka1 = parseInt (document.getElementById('bil1').value)
            var angka2 = parseInt (document.getElementById('bil2').value)
            var hasilpertambahan = angka1+angka2;
            document.getElementById('hasilpertambahan').innerHTML = hasilpertambahan;
        }
        
        function pembagian() {
            var angka1 = parseInt (document.getElementById('bil3').value)
            var angka2 = parseInt (document.getElementById('bil4').value)
            var hasilpembagian = angka1/angka2;
            document.getElementById('hasil Pembagian').innerHTML = hasilPembagian;
        }
        
        function perkalian() {
            var angka1 = parseInt (document.getElementById('bil1').value)
            var angka2 = parseInt (document.getElementById('bil2').value)
            var hasilperkalian = angka1/angka2;
            document.getElementById('hasil Perklaian').innerHTML = hasilPerkalian;
    </script>
    
